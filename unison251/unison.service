[Unit]
Description=Unison file synchronization service
Documentation=https://www.cis.upenn.edu/~bcpierce/unison/

[Service]
Type=exec
ExecStart=/usr/bin/unison -ui=text -logfile=.unison/service.log -repeat=watch -auto -batch -terse
Restart=on-failure
RestartSec=10
LimitNOFILE=infinity
LimitSTACK=infinity
KillMode=process

[Install]
WantedBy=default.target
